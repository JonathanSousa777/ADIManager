<?xml version="1.0" encoding="UTF-8"?>
<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" 
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="login">
        <pattern value="/login"/>
        <view-id value="/login.xhtml"/>
    </url-mapping>
    <url-mapping id="dashboard">
        <pattern value="/dashboard"/>
        <view-id value="/dashboard.xhtml"/>
    </url-mapping>
    <url-mapping id="consulta-usuarios">
        <pattern value="/usuarios"/>
        <view-id value="/consultas/consultaUsuarios.xhtml"/>
    </url-mapping>
    <url-mapping id="cadastro-usuarios">
        <pattern value="/cadastro-usuarios"/>
        <view-id value="/cadastros/cadastroUsuarios.xhtml"/>
    </url-mapping>
    <url-mapping id="editar-usuarios">
        <pattern value="/editar-usuarios=#{ pcid : usuarioBean.codigo}"/>
        <action onPostback="false">#{usuarioBean.buscarUsuario}</action>
        <view-id value="/cadastros/cadastroUsuarios.xhtml"/>
    </url-mapping>
